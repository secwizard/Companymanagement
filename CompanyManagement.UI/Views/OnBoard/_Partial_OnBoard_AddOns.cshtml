@using System.Data
@model CompanyManagement.UI.Models.Response.OnBoardProcessinfo


<div class="scrollsetting">
    <div class="row">
        <div class="col p-0">
            <div class="custom-table mt-3">
                <div class="row">
                    <div class="col-md-6 pl-0">
                        <p class="all-textlabel">Choose Add Ons</p>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control textbox-custom" placeholder="Search" onkeyup="SearchAddOns()" id="srchadd">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-search p-control-icon right-icon-style color456b6b" aria-hidden="true"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                <table class="table table-responsive table-bordered border-0 mb-3">
                    <thead class="custom-table-thead">
                        <tr class="text-leftt-thtd">
                            <th style="width:10%"><p class="table-blankp mb-0"></p></th>
                            <th style="width:20%"><p class="table-blankp mb-0">Subscription Name</p></th>
                            <th style="width:20%"><p class="table-blankp mb-0"> Description</p></th>
                            <th style="width:10%"><p class="table-blankp mb-0"> Product Code</p></th>
                            <th style="width:10%"><p class="table-blankp mb-0"> Metric</p></th>
                            <th style="width:20%"><p class="table-blankp mb-0"> Inclusion</p></th>
                        </tr>
                    </thead>
                    <tbody class="custom-table-tbody" id="tbl_OnBoard_AddOn_body">
                        @if (Model != null && Model.OnBoardAddOn != null && Model.OnBoardAddOn.Count > 0)
                        {
                            foreach (var item in Model.OnBoardAddOn)
                            {
                                <tr id="tr_@item.AddOnId">
                                    <td style="width:10%">
                                        <label class="font11 all-textlabel l-p-initial cus-chkbox">
                                            <input class="permissionCheckbox" id="addons_@item.AddOnId" name="AddOns" value="@item.AddOnId" type="checkbox" />
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td style="width:20%">@item.PartNo</td>
                                    <td style="width:20%">@item.Description</td>
                                    <td style="width:10%">@item.ProductCode</td>
                                    <td style="width:10%">@item.Metric</td>
                                    <td style="width:20%">@item.Inclusion</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>